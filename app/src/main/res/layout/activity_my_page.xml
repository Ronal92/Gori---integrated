<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_page"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Taling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:textSize="33sp"
            android:gravity="center"
            android:textStyle="normal|italic"
            android:textColor="@color/colorAccent"
            android:layout_weight="18"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/munu_icon"
            android:id="@+id/imageButton3"
            android:background="@color/cardview_light_background"
            android:layout_margin="10dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_activity_my_page"
        android:orientation="horizontal"
        android:background="@drawable/test"
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <goriproject.ykjw.com.myapplication.Test.RadiusImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/test2"
            android:id="@+id/imageView2"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp" />

        <TextView
            android:text="김진우 님"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp" />


    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabOuter_activity_my_page"
        app:tabSelectedTextColor="@color/colorAccent"
        style="@style/viewPagerTitle"/>



    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPagerOuter_activity_my_page"
        android:layout_below="@+id/tabOuter_activity_my_page">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabInner_activity_my_page"
        app:tabSelectedTextColor="@color/colorAccent"
        style="@style/viewPagerTitle"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewPagerInner_activity_my_page"
        android:layout_below="@+id/tabInner_activity_my_page"/>


    </android.support.v4.view.ViewPager>


</LinearLayout>
